#include <stdio.h>
#include <stdlib.h>
#include <string.h>
/*
 * 
 */
int main(int argc, char** argv) {
    
    const int NUMWDS = 100;
    const int NUMCH = 25;
    
    FILE *wordF = fopen("Word.txt","r");
    
    char line[128];
    int index = 0;
    int lineLen = 0;
    int sflag;
    char words[NUMWDS][NUMCH];
    int lineloc;
    char shortW[25] = "jfjfjfjfjf";
    char longW[25] = "jfjfjfjfjf";
    if(wordF == NULL)
    {
        return(EXIT_FAILURE);
    }
    
    char catH[25];
    char wCat[10] = "cat";
    int num = 0;
    int stop = 0;
    
    while((!feof(wordF))&&(index < NUMWDS))
    {
        fgets(line, 128, wordF);
        lineLen = strlen(line);
        
        sflag = sscanf(line,"%s",words[index]);
        
        lineloc = 0;
        
        while((sflag != 0)&&(index < NUMWDS)&&(lineloc < lineLen))
        {
            if((strlen(words[index]) >= 1) && (isalnum(words[index][0])))
            {
                lineloc += strlen(words[index])+1;
                //printf("words[] = %s\n",words[index]);
                
                //short
                if(strlen(words[index]) < strlen(shortW))
                {
                    strcpy(shortW,words[index]);  
                }
                if(strlen(words[index]) > strlen(longW))
                {
                    strcpy(longW,words[index]);  
                }
                index++;

                sflag = sscanf((line+lineloc),"%s",words[index]);
            }
            else
            {
                lineloc = 128;
            }
        }
    }
    
    for(int i = 0; i < index; i++)
    {
        printf("words[%d] = %s\n",i,words[i]);
        
        
        if((strstr(words[i],wCat) != NULL)&&(stop == 0))
        {
            strcpy(catH,words[i]);
            num = i;
            stop++;
        }
    }
    printf("\nShort Word = %s",shortW);
    printf("\nLong Word = %s",longW);
    printf("\nThe word with cat in it is words[%d] = %s\n",num,words[num]);
    
    
    return (EXIT_SUCCESS);
}

